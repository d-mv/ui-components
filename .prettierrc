{
  "singleQuote": true,
  "jsxBracketSameLine": true,
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "printWidth": 90,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "parser": "json"
      }
    },
    {
      "files": ["*.ts", "*tsx"],
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
